{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@src": [
        "*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@menus/*": [
        "components/profile/menus/*"
      ],
      "@service/*": [
        "service/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@content/*": [
        "components/profile/content/*"
      ],
      "@lists/*": [
        "components/profile/lists/*"
      ],
      "@cards/*": [
        "components/profile/cards/*"
      ],
    },
    "baseUrl": "./src" 
    ,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.setup.js"
, "next.config.js"  ],
  "exclude": [
    "node_modules"
  ]
}
