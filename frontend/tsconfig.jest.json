{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs", // Required for Jest
    "jsx": "react", // Use "react" or "react-jsx" depending on your React version
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "allowJs": true, // Allows JavaScript files if needed
    "target": "es6", // Ensures modern JavaScript features
    "moduleResolution": "node", // Resolves modules in node_modules
    "skipLibCheck": true // Skips type checking for declaration files
  }
}